generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(cuid())
  city        String
  street      String
  state       String   @db.VarChar(2)
  zipCode     String   @db.VarChar(5)
  lat         Float
  long        Float
  weatherData Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([city])
  @@index([state])
  @@index([zipCode])
  @@index([createdAt])
}
